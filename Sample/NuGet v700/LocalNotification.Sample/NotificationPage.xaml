<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LocalNotification.Sample.NotificationPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Tapped">
    <ContentPage.Content>
        <StackLayout>
            <Label
                HorizontalOptions="CenterAndExpand"
                Text="Notification Tapped Successfully"
                VerticalOptions="CenterAndExpand" />

            <Label
                x:Name="IdLabel"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="CenterAndExpand" />

            <Label
                x:Name="MessageLabel"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="CenterAndExpand" />

            <Label
                x:Name="TapCountLabel"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="CenterAndExpand" />

            <Button
                Clicked="Button_Clicked"
                HorizontalOptions="Center"
                Text="Go Back"
                VerticalOptions="Center" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>